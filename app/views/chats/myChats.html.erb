<% @page_title = "My chats" %>
<%= link_to("<< Back to home", {:controller => 'home', :action => 'index'}) %>

<div class="chores index">
	<h2>Chats with other users</h2>


	<table class = "listing" summary = "Chats list">
		<% @myChats.each do |c| %>

			<tr >
				<td class="actions">
					<%= link_to(@usernames[c], {:action => 'chatWith', :id => c.id}) %>
					<%#= link_to("Edit", {:action => 'edit', :id => c.id, :class => 'action edit'}) %>
					<%#= link_to("Delete", {:action => 'delete', :id => c.id, :class => 'action delete'}) %>

				</td>
			</tr>
		<%end%>

		
	</table>

</div>