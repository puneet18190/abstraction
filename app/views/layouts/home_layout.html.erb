    		<%end%>

    		<div id="content">
  	    	<%= yield %>
  		  </div>
    	</div>
  		<div id="footer">
      	<p id=:"copyright">&copy; Abstraction.website</p>
        <p>Version 0.4.1 c110</p>
      </div>	
    </div>
